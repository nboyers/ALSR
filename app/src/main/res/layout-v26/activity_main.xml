<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubackground"
    tools:context="views.MainActivity"
    tools:viewBindingIgnore="true">

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/blocktastic"
        android:gravity="center_horizontal"
        android:inputType="none"
        android:text="@string/map_choice"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stormPoint_button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        android:alpha="20"
        android:backgroundTint="@color/apexRed"
        android:text="@string/storm_point"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/worldsEdge_Button"
        app:layout_constraintTop_toBottomOf="@+id/olympus_Button"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/olympus_Button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="16dp"
        android:alpha="20"
        android:backgroundTint="@color/apexRed"
        android:text="@string/olympus"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/kingsCanyon_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kingsCanyon_button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="48dp"
        android:alpha="20"
        android:backgroundTint="@color/apexRed"

        android:text="@string/kings_canyon"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/worldsEdge_Button"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginEnd="48dp"
        android:alpha="20"
        android:backgroundTint="@color/apexRed"
        android:text="@string/world_s_edge"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kingsCanyon_button"
        app:layout_constraintVertical_bias="0.076" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/duoSwitch"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:backgroundTintMode="screen"
        android:text="@string/duos"

        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />


</androidx.constraintlayout.widget.ConstraintLayout>